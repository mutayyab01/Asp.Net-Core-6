@model IEnumerable<PartialViewAspCore6.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<div class="container">
    <div class="row">
    @foreach (var item in Model)
        {
            <div class="col-md-4">
                @* <partial name="_ProductPartialView" model="item" /> *@ @* This is use in latest version  *@
              @await Html.PartialAsync("_ProductPartialView",item)
            </div>
        }
    </div>
</div>