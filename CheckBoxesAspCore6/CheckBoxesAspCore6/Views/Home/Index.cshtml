@model CheckBoxesAspCore6.Models.ViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<form asp-action="Index" asp-controller="Home" method="post">
    <label>Sports You Like </label>
    @foreach (var item in Model.CheckBoxes)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="@item.Value" id="checkbox_@item.Value"
            name="sport" checked="@item.IsChecked" 
            >
            <label class="form-check-label" for="flexCheckDefault">
                @item.Text
            </label>
        </div>
    }
    <br />
    <input type="submit" value="submit" class="btn btn-outline-success" />
</form>

